---
import { cn } from '@lib/utils';
import { Icon } from 'astro-icon/components';
import { SITE, SOCIALS } from '@consts';
import Link from '@components/Link.astro';

const { class: otherClasses = '', ...rest } = Astro.props;
---

<div class={cn('flex flex-wrap justify-center gap-x-3 not-prose', otherClasses)} {...rest}>
  {
    SOCIALS.map((SOCIAL) => (
      <Link
        href={SOCIAL.HREF}
        aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
        class="gap-x-1 text-nowrap"
        rel={SOCIAL.REL_ME ? 'me' : null}
      >
        <Icon class="size-6" name={SOCIAL.ICON} />
        <span class="hidden sm:inline-block">{SOCIAL.NAME}</span>
      </Link>
    ))
  }
</div>
